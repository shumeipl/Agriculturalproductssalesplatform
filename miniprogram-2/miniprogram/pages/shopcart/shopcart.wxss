/* pages/shopcart/shopcart.wxss */
/*订单商品信息*/
.one-goods{
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgb(211, 209, 209);
  margin: 10rpx 20rpx;
  padding: 20rpx 0rpx;
  border-radius: 20rpx;
}
.choose-img{
  width: 50rpx;
  height: 50rpx;

  padding: 75rpx 20rpx;
}
.goods-img{
  width: 200rpx;
  height: 200rpx;

}
.goods-right{
  width:450rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 20rpx;
}
.goods-right-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
.goods-price{
  display: flex;
  flex-direction: row;
}
.goods-number{
  display: flex;
  flex-direction: row;
  margin-left: 140rpx;
}
/*底部样式*/
.bottom-box{
  position: fixed;
  left:0;
  bottom: 0;
  height: 100rpx;
  background-color: rgb(233, 233, 233);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;

}
.bottom-left{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 16%;
  padding: 20rpx 0rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  color: rgb(105, 105, 105);
}
.bottom-left-img{
  width: 45rpx;
  height: 45rpx;
}
.bottom-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 20rpx;
  height: 80rpx;

}
.right-left{
  font-size: 22rpx;
  width: 70rpx;
  text-align: center;
}
.right-center{
  font-size: 32rpx;
  color: red;
  text-align: right;
}
.right-right{
  background-color: rgb(247, 91, 35);
  width: 190rpx;
  text-align: center;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: rgb(248, 235, 235);
  margin-left: 40rpx;
}
