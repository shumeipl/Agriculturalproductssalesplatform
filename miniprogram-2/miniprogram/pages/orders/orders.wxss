/* pages/orders/orders.wxss */
.box{
  height: 100vh;
  background-color: rgb(238, 235, 235);
  padding:10rpx 0;
}

/*地址信息*/
.address-box{
  height: 200rpx;
  margin: 0rpx 20rpx;
  width: 95%;
  background-color: white;
  border-radius: 20rpx;
}
.add-address{
  line-height: 60rpx;
  text-align: right;
  padding: 0 20rpx;
  border-bottom: 1rpx solid rgb(194, 194, 194);
}
.user-imformation{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.name-phone{
  line-height: 130rpx;
}
.name{
  margin-right: 30rpx;
}
.address-detail{
  margin-top: -30rpx;
}

/*订单商品信息*/
.order-box{
  display: flex;
  flex-direction: column;
  background-color: rgb(238, 235, 235);
  margin-top: 10rpx;
}
.one-order{
  display: flex;
  flex-direction: row;
  border:1rpx solid rgb(243, 241, 241);
  background-color: rgb(255, 255, 255);
  margin: 0rpx 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  height: 250rpx;
}
.good-imformation{
  display: flex;
  flex-direction:column;
  width: 450rpx;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  justify-content: space-between;
}
.imformation-buttom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  color: red;
  font-size: 32rpx;
}
.imformation-buttom-right{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: black;
}

/*总订单信息*/
.order-details{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx;
  padding: 10rpx 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.order-info{
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
}

/*底部样式*/
.bottom-box{
  position: fixed;
  left:0;
  bottom: 0;
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  justify-content: flex-end;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.bottom{
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.left-left{
  font-size: 20rpx;
  color: rgb(102, 102, 102);
  margin:0 10rpx; 
}
.left{
  font-size: 22rpx;
  text-align: center;
  width: 70rpx;
}
.center{
  font-size: 40rpx;
  color: red;
  text-align: right;
}
.right{
  background-color: rgb(247, 91, 35);
  text-align: center;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: rgb(248, 235, 235);
  width: 190rpx;
  margin: 0 20rpx;
}