/* pages/oederDetail/orderDetail.wxss */
.order-menu{
  position: fixed;
  left:0;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid rgb(223, 223, 223);
  background-color: #eee;
}
.menu{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 20rpx;
}
.choose-type{
  border-bottom: 5rpx solid red;
}

/*订单商品信息*/
.order-box{
  margin-top: 63rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(238, 235, 235);
  padding: 10rpx 0;
  height: 100vh;
}
.one-order{
  display: flex;
  flex-direction: column;
  border:1rpx solid rgb(243, 241, 241);
  background-color: rgb(255, 255, 255);
  margin: 10rpx 20rpx;
  padding: 10rpx 0rpx;
  border-radius: 20rpx;
}
.create-time{
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid rgb(223, 223, 223);
}
.goods-wrap{
  display: flex;
  flex-direction: column;
  border:1rpx solid rgb(238, 235, 235);

}
.one-good{
  display: flex;
  flex-direction: row;
  padding: 20rpx 20rpx;
  border-top: 1rpx solid rgb(216, 215, 215);
}
.good-img{
  height: 200rpx;
  width: 200rpx;
  margin: 10rpx 0;
}
.good-imformation{
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  width: 450rpx;
  padding: 10rpx 20rpx;
}
.imformation-top{
  font-size: 28rpx;
  padding: 10rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.imformation-top-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}
.left{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 300rpx;
}
.right-top{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  font-size: 36rpx;

}
.imformation-center{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  width: 100%;

}
.option{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
  margin-top:0;
}
.option-left{
  margin: 0rpx 30rpx;
  border:1rpx solid rgb(216, 214, 214);
  font-size: 28rpx;
  border-radius: 30rpx;
  width: 180rpx;
  padding: 10rpx 30rpx;
}
.option-right1{
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: 1rpx solid red;
  color: red;
}
.option-right{
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: 1rpx solid red;
  color: red;
  width: 180rpx;
  text-align: center;
}
